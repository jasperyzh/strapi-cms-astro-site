<script>
  document.addEventListener('DOMContentLoaded', () => {
    const pricingToggle = document.getElementById('pricing-toggle');
    const toggleLabels = document.querySelectorAll('.toggle-label');
    const individualPrices = document.querySelectorAll('.price-amount.individual');
    const corporatePrices = document.querySelectorAll('.price-amount.corporate');

    if(pricingToggle) {
      pricingToggle.addEventListener('change', () => {
        toggleLabels.forEach((label, index) => {
          label.classList.toggle('active', index === (pricingToggle.checked ? 1 : 0));
        });

        individualPrices.forEach(price => {
          price.style.display = pricingToggle.checked ? 'none' : 'block';
        });

        corporatePrices.forEach(price => {
          price.style.display = pricingToggle.checked ? 'block' : 'none';
        });
      });
    }
  });
</script>

<style>
  .pricing {
    background-color: white;
  }

  .pricing-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h2 {
    font-size: 2.5rem;
    color: var(--secondary-color);
    margin-bottom: 1rem;
  }

  .underline {
    height: 4px;
    width: 60px;
    background-color: var(--primary-color);
    margin: 0 auto;
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.25rem;
    color: #64748b;
    max-width: 600px;
    margin: 0 auto;
  }

  .pricing-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .toggle-label {
    font-size: 1rem;
    color: #64748b;
    cursor: pointer;
    transition: color 0.3s ease;
  }

  .toggle-label.active {
    color: var(--primary-color);
    font-weight: 600;
  }

  .switch {
    position: relative;
    display: inline-block;
    width: 60px;
    height: 30px;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #e2e8f0;
    transition: 0.4s;
    border-radius: 34px;
  }

  .slider:before {
    position: absolute;
    content: "";
    height: 22px;
    width: 22px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    transition: 0.4s;
    border-radius: 50%;
  }

  input:checked + .slider {
    background-color: var(--primary-color);
  }

  input:checked + .slider:before {
    transform: translateX(30px);
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .pricing-card {
    background-color: white;
    border: 1px solid #e2e8f0;
    border-radius: 0.75rem;
    padding: 2.5rem 2rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
  }

  .pricing-card.featured {
    border-color: var(--primary-color);
    box-shadow: 0 10px 25px -5px rgba(37, 99, 235, 0.1),
      0 10px 10px -5px rgba(37, 99, 235, 0.04);
    transform: translateY(-10px) scale(1.02);
    z-index: 1;
  }

  .pricing-card:hover {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .card-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--primary-color);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.5rem 1rem;
    border-radius: 20px;
  }

  .card-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .card-header h3 {
    font-size: 1.5rem;
    color: var(--secondary-color);
    margin-bottom: 1rem;
  }

  .price {
    margin-bottom: 1rem;
  }

  .price-amount {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--primary-color);
    line-height: 1;
  }

  .price-amount.corporate {
    display: none;
  }

  .price-period {
    display: block;
    font-size: 0.875rem;
    color: #64748b;
    margin-top: 0.5rem;
  }

  .price-description {
    font-size: 0.875rem;
    color: #64748b;
    max-width: 250px;
    margin: 0 auto;
  }

  .card-features {
    margin-bottom: 2rem;
  }

  .card-features ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .card-features li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.95rem;
    color: #475569;
    padding: 0.75rem 0;
    border-bottom: 1px solid #f1f5f9;
  }

  .card-features li svg {
    color: var(--primary-color);
    flex-shrink: 0;
  }

  .card-features li.disabled {
    color: #cbd5e1;
  }

  .card-features li.disabled svg {
    color: #cbd5e1;
  }

  .card-footer {
    text-align: center;
  }

  .custom-solution {
    text-align: center;
    padding: 3rem;
    background-color: #f8fafc;
    border-radius: 1rem;
    margin-top: 2rem;
  }

  .custom-solution h3 {
    font-size: 1.5rem;
    color: var(--secondary-color);
    margin-bottom: 1rem;
  }

  .custom-solution p {
    font-size: 1.125rem;
    color: #64748b;
    max-width: 500px;
    margin: 0 auto 1.5rem;
  }

  @media (max-width: 768px) {
    .pricing-grid {
      grid-template-columns: 1fr;
    }

    .pricing-card.featured {
      transform: none;
    }

    h2 {
      font-size: 2rem;
    }

    .pricing-card {
      padding: 2rem 1.5rem;
    }
  }
</style>