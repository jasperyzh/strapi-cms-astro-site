<style>
  .experience {
    background-color: var(--light-bg);
  }

  .experience-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h2 {
    font-size: 2.5rem;
    color: var(--secondary-color);
    margin-bottom: 1rem;
  }

  .underline {
    height: 4px;
    width: 60px;
    background-color: var(--primary-color);
    margin: 0 auto;
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.25rem;
    color: #64748b;
    max-width: 600px;
    margin: 0 auto;
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .portfolio-item {
    background-color: white;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .portfolio-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  .portfolio-image {
    height: 200px;
    overflow: hidden;
  }

  .portfolio-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .portfolio-item:hover .portfolio-image img {
    transform: scale(1.05);
  }

  .portfolio-content {
    padding: 1.5rem;
  }

  .portfolio-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--secondary-color);
    margin-bottom: 0.75rem;
  }

  .portfolio-content p {
    font-size: 0.95rem;
    color: #64748b;
    margin-bottom: 1rem;
  }

  .portfolio-meta {
    display: flex;
    gap: 1rem;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    color: #64748b;
  }

  .testimonials {
    margin-top: 4rem;
  }

  .testimonials-heading {
    text-align: center;
    font-size: 1.75rem;
    color: var(--secondary-color);
    margin-bottom: 2rem;
  }

  .testimonial-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .testimonial {
    background-color: white;
    border-radius: 0.5rem;
    padding: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .testimonial-content {
    position: relative;
    margin-bottom: 1.5rem;
  }

  .quote-icon {
    color: rgba(37, 99, 235, 0.2);
    margin-bottom: 0.5rem;
  }

  .testimonial-content p {
    font-size: 1rem;
    line-height: 1.6;
    color: #475569;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .author-image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }

  .author-info h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--secondary-color);
    margin-bottom: 0.25rem;
  }

  .author-info p {
    font-size: 0.75rem;
    color: #64748b;
    margin: 0;
  }

  @media (max-width: 768px) {
    .portfolio-grid,
    .testimonial-grid {
      grid-template-columns: 1fr;
    }

    h2 {
      font-size: 2rem;
    }

    .testimonials-heading {
      font-size: 1.5rem;
    }
  }
</style>